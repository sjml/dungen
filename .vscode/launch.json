{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
      {
        "name": "(lldb) Launch",
        "type": "cppdbg",
        "request": "launch",
        "preLaunchTask": "Build Compiled Project",
        "program": "${workspaceFolder}/build/DunGen",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "lldb"
      },
      {
        "name": "(Windows) Launch",
        "type": "cppvsdbg",
        "request": "launch",
        "preLaunchTask": "Build Compiled Project",
        "program": "${workspaceFolder}/build/DunGen.exe",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal",
        "environment": []
      },
      {
        // requires the nisargjhaveri.ios-debug and vadimcn.vscode-lldb extensions
        "name": "(iOS) Launch",
        "type": "lldb",
        "request": "launch",
        "preLaunchTask": "Install Compiled Project",
        "program": "${workspaceFolder}/build/DunGen_dist/DunGen.app",
        "iosBundleId": "com.shaneliesegang.DunGen-iOS",
        "iosTarget": "select"
      }
    ]
}
