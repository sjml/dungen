{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Run",
        "type": "shell",
        "command": "${workspaceFolder}/build/Debug/DunGen.app/Contents/MacOS/DunGen",
        "options": {
          "cwd": "${workspaceFolder}/build"
        },
        "windows": {
          "command": "${workspaceFolder}/build/Release/DunGen.exe",
          "options": {
            "cwd": "${workspaceFolder}/build/Release"
          },
        },
        "presentation": {
          "echo": false,
          "reveal": "silent",
          "focus": false,
          "panel": "shared",
          "showReuseMessage": false,
          "clear": true
        },
        "problemMatcher": [],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "Run Unit Tests",
        "type": "shell",
        "command": "${workspaceFolder}/build/Debug/DunGen.app/Contents/MacOS/DunGen",
        "args": ["--startup", "_testing.UnitTest"],
        "options": {
          "cwd": "${workspaceFolder}/build"
        },
        "presentation": {
          "echo": false,
          "reveal": "always",
          "focus": false,
          "panel": "shared",
          "showReuseMessage": false,
          "clear": true
        },
        "problemMatcher": [],
        "group": {
          "kind": "test",
          "isDefault": true
        }
      },
      {
        "label": "Build Compiled Project",
        "type": "shell",
        "command": "xcodebuild",
        "args": [
          "-sdk", "macosx",
          "-scheme", "DunGen (Debug)",
          "-project", "DunGen.xcodeproj",
          "build"
        ],
        "options": {
          "cwd": "${workspaceFolder}",
        },
        "presentation": {
          "echo": false,
          "reveal": "always",
          "focus": false,
          "panel": "shared",
          "showReuseMessage": false,
          "clear": true
        },
        "problemMatcher": [
          {
            "owner": "Xcode",
            "fileLocation": "absolute",
            "pattern": {
              "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
              "file": 1,
              "line": 2,
              "column": 3,
              "severity": 4,
              "message": 5
            }
          }
        ]
      }
    ]
}
