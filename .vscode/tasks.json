{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Run",
        "type": "shell",
        "command": "${workspaceFolder}/build/DunGen",
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "windows": {
          "command": "${workspaceFolder}/build/DunGen.exe",
        },
        "presentation": {
          "echo": false,
          "reveal": "always",
          "focus": false,
          "panel": "shared",
          "showReuseMessage": false,
          "clear": true
        },
        "problemMatcher": [],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "Run Unit Tests",
        "type": "shell",
        "command": "${workspaceFolder}/build/DunGen",
        "windows": {
          "command": "${workspaceFolder}/build/DunGen.exe",
        },
        "args": ["startup=_testing.UnitTest"],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "presentation": {
          "echo": true,
          "reveal": "always",
          "focus": false,
          "panel": "shared",
          "showReuseMessage": false,
          "clear": true
        },
        "problemMatcher": [],
        "group": {
          "kind": "test",
          "isDefault": true
        }
      },
      {
        "label": "Build Compiled Project",
        "type": "shell",
        "command": "meson",
        "args": [
          "compile", 
          "-C", "build"
        ],
        "options": {
          "cwd": "${workspaceFolder}",
        },
        "linux": {
          "command": "ninja",
          "args": [],
          "options": {
            "cwd": "${workspaceFolder}/build"
          }
        },
        "presentation": {
          "echo": false,
          "reveal": "always",
          "focus": false,
          "panel": "shared",
          "showReuseMessage": false,
          "clear": true
        },
        "problemMatcher": []
      }
    ]
}
